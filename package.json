{
	"name": "@dariah-eric/dariah-website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "^22"
	},
	"packageManager": "pnpm@10.18.1",
	"scripts": {
		"app:build": "next build",
		"analyze": "TURBOPACK_STATS=1 next build && echo '\nâœ… Saved stats to \".next/server/webpack-stats.json\". Analyze at \"https://statoscope.tech\".'",
		"build": "run-s content:build app:build",
		"content:build": "dotenv -c -- tsx ./scripts/content/generate-content.ts build",
		"content:dev": "dotenv -c -- tsx ./scripts/content/generate-content.ts watch",
		"dev": "concurrently --kill-others --names \"content,app\" --prefix-colors \"auto\" \"pnpm:content:dev\" \"pnpm:app:dev\"",
		"dev:typesense:down": "docker compose --env-file=./.env.local down --volumes",
		"dev:typesense:up": "docker compose --env-file=./.env.local up --detach",
		"format:check": "prettier . --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./styles/**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup types:prepare",
		"setup": "is-in-ci || simple-git-hooks",
		"start": "next start",
		"test:e2e": "playwright test --config ./e2e/playwright.config.ts",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "pnpm run test:e2e --ui",
		"test:e2e:update-snapshots": "pnpm run test:e2e --update-snapshots",
		"types:check": "tsc --noEmit",
		"types:prepare": "next typegen",
		"typesense:api-key:create": "dotenv -c development -- tsx ./scripts/typesense/create-api-key.ts",
		"typesense:build": "dotenv -c production -- tsx ./scripts/typesense/create-search-index.ts",
		"typesense:collection:create": "dotenv -c development -- tsx ./scripts/typesense/create-collection.ts",
		"typesense:collection:seed": "dotenv -c development -- tsx ./scripts/typesense/seed-collection.ts"
	},
	"dependencies": {
		"@acdh-oeaw/keystatic-lib": "^0.8.0",
		"@acdh-oeaw/lib": "^0.3.5",
		"@acdh-oeaw/mdx-lib": "^0.1.4",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.1.1",
		"@keystar/ui": "^0.7.19",
		"@keystatic/core": "^0.5.48",
		"@keystatic/next": "^5.0.4",
		"@mdx-js/mdx": "^3.1.1",
		"@opentelemetry/api": "^1.9.0",
		"@react-aria/utils": "^3.31.0",
		"@vercel/otel": "^2.0.1",
		"client-only": "^0.0.1",
		"clsx": "^2.1.1",
		"image-size": "^2.0.2",
		"is-network-error": "^1.3.0",
		"lucide-react": "^0.544.0",
		"next": "canary",
		"next-intl": "^4.3.9",
		"react": "^19.2.0",
		"react-aria": "^3.44.0",
		"react-aria-components": "^1.13.0",
		"react-dom": "^19.2.0",
		"react-schemaorg": "^2.0.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.1",
		"remark-smartypants": "^3.0.2",
		"server-nodejs-only": "^0.0.1",
		"server-only": "^0.0.1",
		"sharp": "^0.34.4",
		"unist-util-visit": "^5.0.0",
		"valibot": "^1.1.0",
		"vfile": "^6.0.3",
		"xast-util-feed": "^2.0.0",
		"xast-util-to-xml": "^4.0.0"
	},
	"devDependencies": {
		"@acdh-oeaw/content-lib": "^0.1.2",
		"@acdh-oeaw/eslint-config": "^2.0.10",
		"@acdh-oeaw/eslint-config-next": "^4.0.1",
		"@acdh-oeaw/eslint-config-node": "^2.0.10",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.12",
		"@acdh-oeaw/eslint-config-react": "^3.0.1",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.2",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.3.1",
		"@acdh-oeaw/tsconfig": "^1.5.1",
		"@next/eslint-plugin-next": "canary",
		"@playwright/test": "^1.56.0",
		"@react-aria/optimize-locales-plugin": "^1.1.5",
		"@tailwindcss/postcss": "^4.1.14",
		"@types/hast": "^3.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^22.18.8",
		"@types/react": "^19.2.1",
		"@types/react-dom": "^19.2.0",
		"axe-core": "^4.10.3",
		"axe-playwright": "^2.2.2",
		"babel-plugin-react-compiler": "latest",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"dotenv-cli": "^10.0.0",
		"dotenv-expand": "^12.0.3",
		"eslint": "^9.37.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.0",
		"globals": "^16.4.0",
		"is-in-ci": "^2.0.0",
		"lint-staged": "^16.2.3",
		"npm-run-all2": "^8.0.4",
		"null-loader": "^4.0.1",
		"prettier": "^3.6.2",
		"schema-dts": "^1.1.5",
		"simple-git-hooks": "^2.13.1",
		"stylelint": "^16.25.0",
		"tailwindcss": "^4.1.14",
		"tailwindcss-react-aria-components": "^2.0.1",
		"tsx": "^4.20.6",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.9.3"
	},
	"browserslist": {
		"development": [
			"baseline newly available"
		],
		"production": [
			"baseline widely available"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx)": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
