{
	"name": "@acdh-oeaw/dariah-website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x"
	},
	"packageManager": "pnpm@10.18.1",
	"scripts": {
		"analyze": "BUNDLE_ANALYZER=\"enabled\" next build --no-lint",
		"build": "next build",
		"dev": "next dev",
		"content:populate": "dotenv -c -- tsx ./scripts/cms/create-cms-content.ts",
		"format:check": "prettier . \"!./@(content|public)/**\" --cache --cache-location ./.prettiercache --check",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --flag unstable_native_nodejs_ts_config",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.css\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"typesense:transform-cms-content": "tsx ./scripts/typesense/process-cms-content.ts",
		"typesense:create-collection": "dotenv -c -- tsx ./scripts/typesense/create-collection.ts",
		"typesense:get-sshoc-data": "tsx ./scripts/typesense/get-sshoc-data.ts",
		"typesense:upload-documents": "dotenv -c -- tsx ./scripts/typesense/upload-documents.ts",
		"typesense:populate": "run-s typesense:create-collection typesense:transform-cms-content typesense:get-sshoc-data typesense:upload-documents",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "next start",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "tsc --noEmit",
		"validate": "run-p format:check lint:check types:check test test:e2e"
	},
	"dependencies": {
		"@acdh-oeaw/keystatic-lib": "^0.5.3",
		"@acdh-oeaw/lib": "^0.3.2",
		"@acdh-oeaw/mdx-lib": "^0.1.3",
		"@acdh-oeaw/style-variants": "^0.1.0",
		"@acdh-oeaw/validate-env": "^0.0.3",
		"@keystar/ui": "^0.7.15",
		"@keystatic/core": "^0.5.43",
		"@keystatic/next": "^5.0.2",
		"@opentelemetry/api": "^1.9.0",
		"@opentelemetry/api-logs": "^0.53.0",
		"@opentelemetry/instrumentation": "^0.53.0",
		"@opentelemetry/sdk-logs": "^0.53.0",
		"@react-aria/utils": "^3.27.0",
		"@shikijs/rehype": "^1.29.1",
		"@sindresorhus/slugify": "^2.2.1",
		"@vercel/otel": "^1.10.0",
		"class-variance-authority": "^0.7.1",
		"client-only": "^0.0.1",
		"date-fns": "^4.1.0",
		"fast-glob": "^3.3.3",
		"gray-matter": "^4.0.3",
		"image-dimensions": "^2.3.0",
		"instantsearch.js": "^4.77.3",
		"lucide-react": "^0.468.0",
		"next": "^14.2.25",
		"next-intl": "^4.1.10",
		"react": "^18.3.1",
		"react-aria": "^3.37.0",
		"react-aria-components": "^1.6.0",
		"react-dom": "^18.3.1",
		"react-instantsearch": "^7.15.3",
		"react-instantsearch-nextjs": "^0.4.4",
		"react-schemaorg": "^2.0.0",
		"react-stately": "^3.35.0",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-mdx-frontmatter": "^5.0.0",
		"remark-smartypants": "^3.0.2",
		"server-only": "^0.0.1",
		"sharp": "^0.33.5",
		"shiki": "^1.29.1",
		"typesense": "^2.0.2",
		"typesense-instantsearch-adapter": "^2.9.0",
		"valibot": "1.0.0-beta.14"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.9",
		"@acdh-oeaw/eslint-config-next": "^2.0.16",
		"@acdh-oeaw/eslint-config-node": "^2.0.9",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.10",
		"@acdh-oeaw/eslint-config-react": "^2.0.11",
		"@acdh-oeaw/eslint-config-tailwindcss": "^3.0.0",
		"@acdh-oeaw/prettier-config": "^2.0.1",
		"@acdh-oeaw/stylelint-config": "^2.0.5",
		"@acdh-oeaw/tsconfig": "^1.3.0",
		"@next/bundle-analyzer": "^14.2.23",
		"@next/eslint-plugin-next": "^14.2.23",
		"@playwright/test": "^1.50.0",
		"@react-aria/optimize-locales-plugin": "^1.1.4",
		"@react-types/shared": "^3.27.0",
		"@tailwindcss/postcss": "^4.1.14",
		"@tailwindcss/typography": "^0.5.19",
		"@types/hast": "^3.0.4",
		"@types/js-yaml": "^4.0.9",
		"@types/mdast": "^4.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^22.10.9",
		"@types/react": "^18.3.18",
		"@types/react-dom": "^18.3.5",
		"axe-core": "^4.10.2",
		"axe-playwright": "^2.0.3",
		"ci-info": "^4.1.0",
		"dotenv": "^16.4.7",
		"dotenv-cli": "^7.4.4",
		"dotenv-expand": "^12.0.1",
		"eslint": "^9.37.0",
		"eslint-config-flat-gitignore": "^2.1.0",
		"eslint-plugin-check-file": "^3.3.0",
		"globals": "^16.4.0",
		"is-ci": "^3.0.1",
		"js-yaml": "^4.1.0",
		"lint-staged": "^15.4.2",
		"npm-run-all2": "^7.0.2",
		"postcss": "^8.5.1",
		"prettier": "^3.4.2",
		"rehype-stringify": "^10.0.1",
		"remark-mdx": "^3.1.0",
		"remark-parse": "^11.0.0",
		"remark-stringify": "^11.0.0",
		"schema-dts": "^1.1.2",
		"simple-git-hooks": "^2.11.1",
		"strip-markdown": "^6.0.0",
		"stylelint": "^16.13.2",
		"tailwindcss": "^4.1.14",
		"tailwindcss-react-aria-components": "^2.0.1",
		"tsx": "^4.19.2",
		"tw-animate-css": "^1.4.0",
		"typescript": "^5.7.3",
		"unified": "^11.0.5",
		"unist-util-visit": "^5.0.0",
		"vfile": "^6.0.3",
		"vfile-matter": "^5.0.1"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.@(js|ts|tsx)": [
			"eslint --fix --flag unstable_native_nodejs_ts_config",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(css)": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(css|js|ts|tsx),!./@(content|public)/**": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"@tailwindcss/postcss": {}
		}
	},
	"prettier": "@acdh-oeaw/prettier-config",
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
