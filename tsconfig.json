{
	"$schema": "https://www.schemastore.org/tsconfig",
	"extends": "@acdh-oeaw/tsconfig",
	"compilerOptions": {
		"paths": {
			"@/*": ["./*"]
		},
		"plugins": [{ "name": "next" }]
	},
	"include": [
		"./**/*.js",
		"./**/*.ts",
		"./**/*.tsx",
		"./next-env.d.ts",
		".next/dev/types/**/*.ts",
		".next/types/**/*.ts",
		"./types/**/*.d.ts",
		"./.storybook/**/*.ts",
		"./.storybook/**/*.tsx"
	],
	"exclude": ["node_modules", "out", "public"]
}
